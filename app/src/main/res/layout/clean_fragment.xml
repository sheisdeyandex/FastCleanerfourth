<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".ui.CleanFragment.CleanFragment">
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="0dp"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="@string/admob_size"
        ads:adUnitId="@string/admob_banner"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/clMemoryScan"
        >
<View
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintWidth_percent="0.7"
    app:layout_constraintDimensionRatio="1:1"
    android:id="@+id/v_progress"
    />
        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:indicatorDirectionCircular="clockwise"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/cpiCleanProgress"
            app:indicatorColor="@color/white"
            app:cpb_background_progressbar_color="@color/track_color"
            app:cpb_progressbar_color="@color/white"
            android:indeterminate="true"
            app:cpb_progressbar_width="10dp"
            app:cpb_indeterminate_mode="true"
            />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cpiCleanProgress"
            app:layout_constraintBottom_toBottomOf="@+id/cpiCleanProgress"
            android:src="@drawable/ic_clean_broom"
            app:lottie_rawRes="@raw/clean"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:visibility="gone"
            android:id="@+id/ivCleanFinished"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scanMemory"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"
        android:textAlignment="center"
        android:id="@+id/tvCleanBottom"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/adView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:id="@+id/clFound">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:text="@string/found"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:id="@+id/tvFound"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.14"
            android:textSize="38sp"
            android:textColor="@color/white"
            android:id="@+id/tvFoundMB"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.3"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/tvFoundApps"
            android:text="@string/running_apps"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/tvFoundApps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.4"
            android:layout_height="wrap_content"
            android:id="@+id/clCache"
            >
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/cgl_start"
                app:layout_constraintGuide_percent="0.05"
                android:orientation="vertical"
                />
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/cgl_center"
                app:layout_constraintGuide_percent="0.15"
                android:orientation="vertical"
                />
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/cgl_end"
                app:layout_constraintGuide_percent="0.8"
                android:orientation="vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visible_cache"
android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@+id/cgl_center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:id="@+id/tvVisibleCache"
                />
            <ImageView
                android:layout_width="0dp"
                android:src="@drawable/ic_clean_cache"
                android:id="@+id/ivCache"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1"
                app:layout_constraintDimensionRatio="1:1"
                />
            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                app:layout_constraintWidth_percent="0.1"
                app:layout_constraintEnd_toStartOf="@+id/cgl_end"
                app:layout_constraintTop_toTopOf="@+id/ivCache"
                app:layout_constraintBottom_toBottomOf="@+id/ivCache"
                android:id="@+id/mcbCache"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/tvFoundApps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
            android:layout_height="wrap_content"
            android:id="@+id/clFiles"
            >
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/cgl_start_files"
                app:layout_constraintGuide_percent="0.05"
                android:orientation="vertical"
                />
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/cgl_center_files"
                app:layout_constraintGuide_percent="0.15"
                android:orientation="vertical"
                />
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/cgl_end_files"
                app:layout_constraintGuide_percent="0.8"
                android:orientation="vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/files"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@+id/cgl_center_files"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:id="@+id/tvVisibleCache_files"
                />
            <ImageView
                android:layout_width="0dp"
                android:src="@drawable/ic_clean_file"
                android:id="@+id/ivCacheFiles"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1"
                app:layout_constraintDimensionRatio="1:1"
                />
            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                app:layout_constraintWidth_percent="0.1"
                app:layout_constraintEnd_toStartOf="@+id/cgl_end_files"
                app:layout_constraintTop_toTopOf="@+id/ivCacheFiles"
                app:layout_constraintBottom_toBottomOf="@+id/ivCacheFiles"
                android:id="@+id/mcbCacheFiles"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/tvFoundApps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.6"
            android:layout_height="wrap_content"
            android:id="@+id/clApps"
            >
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/cgl_start_apps"
                app:layout_constraintGuide_percent="0.05"
                android:orientation="vertical"
                />
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/cgl_center_apps"
                app:layout_constraintGuide_percent="0.15"
                android:orientation="vertical"
                />
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/cgl_end_apps"
                app:layout_constraintGuide_percent="0.8"
                android:orientation="vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apps"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@+id/cgl_center_apps"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:id="@+id/tvVisibleCache_apps"
                />
            <ImageView
                android:layout_width="0dp"
                android:src="@drawable/ic_clean_apps"
                android:id="@+id/ivCacheApps"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1"
                app:layout_constraintDimensionRatio="1:1"
                />
            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                app:layout_constraintWidth_percent="0.1"
                app:layout_constraintEnd_toStartOf="@+id/cgl_end_apps"
                app:layout_constraintTop_toTopOf="@+id/ivCacheApps"
                app:layout_constraintBottom_toBottomOf="@+id/ivCacheApps"
                android:id="@+id/mcbCacheApps"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/tvFoundApps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.7"
            android:layout_height="wrap_content"
            android:id="@+id/clTrash"
            >
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/cgl_start_trash"
                app:layout_constraintGuide_percent="0.05"
                android:orientation="vertical"
                />
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/cgl_center_trash"
                app:layout_constraintGuide_percent="0.15"
                android:orientation="vertical"
                />
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/cgl_end_trash"
                app:layout_constraintGuide_percent="0.8"
                android:orientation="vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trash"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@+id/cgl_center_trash"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:id="@+id/tvVisibleCacheTrash"
                />
            <ImageView
                android:layout_width="0dp"
                android:src="@drawable/ic_clean_trash"
                android:id="@+id/ivCacheTrash"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1"
                app:layout_constraintDimensionRatio="1:1"
                />
            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                app:layout_constraintWidth_percent="0.1"
                app:layout_constraintEnd_toStartOf="@+id/cgl_end_trash"
                app:layout_constraintTop_toTopOf="@+id/ivCacheTrash"
                app:layout_constraintBottom_toBottomOf="@+id/ivCacheTrash"
                android:id="@+id/mcbCacheTrash"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.08"
            app:backgroundTint="@color/button_delete"
            app:cornerRadius="20dp"
            android:text="@string/cleanIt"
            android:id="@+id/mbtnClean"
            android:textAllCaps="false"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>